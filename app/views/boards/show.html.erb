<div id="dialog-region"></div>

<script id="section-list-item" type="text/template">
  <div class="add-card"></div>
  <div class="title">
    <h1 class="text-center">{{= title }}</h1>
  </div>

  <div class="cards-region"></div>
</script>

<script id="card-new" type="text/template">
  <a href="" title="Add Card">
    <div class="fa fa-plus js-card-new"></div>
  </a>
</script>

<script id="card-list" type="text/template">
  <div class="card-stack"></div>
</script>

<script id="card-list-item" type="text/template">
  <div class="data text-justify">
    <div class="text">
      {{= title }}
    </div>
    <!--div class="tags">
      Lorem ipsum
    </div-->
  </div>
  <div class="card-panel">
    <div class="assignee-btn">
      <div class="vertical-center">
      </div>
    </div>
    <a href="" title="Edit or Delete Card">
      <div class="edit-delete-btn">
        <div class="text-center vertical-center js-card-edit">
          <span class="fa fa-edit"></span>
        </div>
      </div>
    </a>
  </div>
</script>

<script id="card-form" type="text/template">
  <form>
    {{ if (section !== undefined) { }}
      <input id="card-section" name="section" type="hidden"
        value="{{= section }}" />
    {{ } }}

    <div class="control-group">
      <label for="card-title" class="control-label">
        Title:</label>
      <input id="card-title" name="title" type="text"
        value="{{= title }}" class="form-control" />
    </div>

    <button class="btn js-card-submit">Save</button>
  </form>
</script>
